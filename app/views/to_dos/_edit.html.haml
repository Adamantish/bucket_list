= form_for edit_to_do ,remote: true, class: "shadow-box"do |f|
  = f.text_field :id , {class: "undisplayed"}
  %fieldset
    = f.label :destination
    = f.select :destination_id , @destination_options, {prompt: 'Pick a country'}

  %fieldset
    = f.label "What"
    = f.text_field :description

  %fieldset
    = f.label "Where"
    = f.text_field :address
  %fieldset
    %button#btn__add-to_do Bucket It
